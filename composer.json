{
    "name": "jonathantorres/medium-sdk",
    "description": "Open source SDK for integrating Medium's OAuth2 API.",
    "keywords": ["medium", "api", "sdk"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan Torres",
            "email": "jonathantorres41@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5.0 || ^7.0 || ^8.0",
        "guzzlehttp/guzzle": "^6.1 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.5 || ^8.0",
        "mockery/mockery": "^1.3.0"
    },
    "autoload": {
        "psr-4": {
            "JonathanTorres\\MediumSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JonathanTorres\\MediumSdk\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "phpunit"
    }
}
